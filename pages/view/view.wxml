<!-- 1、view的基本使用-->
<!-- view是块级元素，独占一行 -->
<view class="bianse">嘿嘿</view>
<view>嘻嘻</view>


<!-- 2、honer-class：当用户按下组件时，现实的样式  -->
<!-- hover-stay-tim手指松开后点击保留时间，单位毫秒 默认400 -->
<view class="box1"
 hover-class="hover-view"
 hover-stay-time="{{0}}">
  box1
</view>

<!-- 3、 hover-stop-propagation： 阻止父级点击显示 -->
<view class="box2" hover-class="box2-hover"> 
  <view class="box1"
    hover-class="hover-view"
    hover-stay-time="{{0}}"
    hover-stop-propagation>
    box1
  </view>
</view>