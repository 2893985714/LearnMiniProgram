
<!-- 1、text基本使用 -->
<text>你好 \n</text>
<text>小程序 \n</text>

<!-- 2、selecttable:true -->
<!-- 默认情况下text中的文本长按是不能选中的 -->
<text selectable='{{true}}'>你好，华少\n</text>
 <text selectable>你好，华少 \n</text><!-- 一般这样写 -->

 <!-- 3、space:决定文本空格的大小 -->
  <!-- ensp：半个中文字符大小-->
  <!-- emsp:一个中文字符大小  -->
 <text>你好 的\n</text>
 <text space='nbsp'>你好 的\n</text>
 <text space='ensp'>你好 的\n</text>
 <text space='emsp'>你好 的</text>

 <!-- 4、decode属性：是否解码文本 -->
 <text decode>  4 &gt; 2</text>